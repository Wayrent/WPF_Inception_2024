<Window x:Class="WPF_Project_1.Manage1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление сотрудниками" Height="300" Width="400">
    <Grid>
        <!-- Клиентская область содержимого окна -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <DataGrid x:Name="EmployeesGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" CanUserAddRows="False" Height="100" Width="249"/>
            <Button Content="Удалить выбранного сотрудника" Click="DeleteEmployee_Click" Margin="0 20"/>
            <Button Content="Добавить нового сотрудника" Click="AddEmployee_Click"/>
        </StackPanel>
    </Grid>
</Window>
